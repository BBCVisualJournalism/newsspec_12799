            <source
                media="(min-width: 1040px)"
                srcset="<%= pathStatic %>/common/img/maps/<%= vocab_dir %>/lesbos_crossing_1040.jpg">
            <source
                media="(min-width: 810px)"
                srcset="<%= pathStatic %>/common/img/maps/<%= vocab_dir %>/lesbos_crossing_810.jpg">
            <source
                media="(min-width: 624px)"
                srcset="<%= pathStatic %>/common/img/maps/<%= vocab_dir %>/lesbos_crossing_624.jpg">

            <img class="lesbos-map__image__fallback"
                 src="<%= pathStatic %>/common/img/maps/<%= vocab_dir %>/lesbos_crossing_624.jpg"
                 srcset="<%= pathStatic %>/common/img/maps/<%= vocab_dir %>/lesbos_crossing_624.jpg"
