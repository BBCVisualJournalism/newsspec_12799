            <p><%= section2_para_1 %></p>
            <p><%= section2_para_2 %></p>
            <p><%= section2_para_3 %></p>

            <img src="<%= pathStatic %>/common/img/firuz_640.jpg" width="100%" />
            <figcaption class="media-with-caption__caption">
                <%= section2_img_1_caption %>
            </figcaption>

            <p><%= section2_para_4 %></p>
            <p><%= section2_para_5 %></p>
            <p><%= section2_para_6 %></p>
            <p><%= section2_para_7 %></p>
            <p><%= section2_para_8 %></p>

            <h2><%= section2_title_2 %></h2>

        </div>
    </div>

